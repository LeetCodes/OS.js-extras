{
  "className":  "ApplicationCodeMirror",
  "name":       "CodeMirror",
  "enabled":    false,
  "mime":       ["^text", "inode\\/x\\-empty", "application\\/x\\-empty", "application\\/x\\-python", "application\\/javascript"],
  "icon":       "./icon.png",
  "category":   "development",
  "enabled":    true,
  "splash":     true,
  "build":      {
    "copy": [
      "icon.png",
      "main.css",
      "main.js",
      "package.json",
      "vendor/CodeMirror/lib/codemirror.js",
      "vendor/CodeMirror/lib/codemirror.css",
      "vendor/CodeMirror/lib/codemirror.css",
      "vendor/CodeMirror/mode"
    ]
  },
  "preload":    [
    {"src": "vendor/CodeMirror/lib/codemirror.js", "type": "javascript", "combine": false},
    {"src": "vendor/CodeMirror/lib/codemirror.css", "type": "stylesheet", "combine": false},
    {"src": "vendor/CodeMirror/mode/javascript/javascript.js", "type": "javascript", "combine": false},
    {"src": "vendor/CodeMirror/mode/xml/xml.js", "type": "javascript", "combine": false},
    {"src": "vendor/CodeMirror/mode/python/python.js", "type": "javascript", "combine": false},
    {"src": "main.js", "type": "javascript"},
    {"src": "main.css", "type": "stylesheet"}
  ]
}
